{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'webdav-sync'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=webdav-sync",
                    "--package=webdav-sync"
                ],
                "filter": {
                    "name": "webdav-sync",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}",
            "env": {
                "WEBDAV_USERNAME": "MYUSERNAME",
                "WEBDAV_PASSWORD": "MYPASSWORD",
                "WEBDAV_HOSTNAME": "http://A.B.C.D"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Cargo test",
            "cargo": {
                "args": [
                    "test",
                    "--no-run"
                ]
            },
            "program": "${cargo:program}",
            "cwd": "${workspaceFolder}",
            "args": []
        }
    ]
}